      <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
         <children>
            <JFXButton onAction="#btnAddProductOnAction" prefHeight="25.0" prefWidth="171.0" styleClass="primary-btn" text="Add Product" />
         </children>
         <BorderPane.margin>
            <Insets top="30.0" />
